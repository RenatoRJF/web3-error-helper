{
  "name": "web3-error-helper",
  "version": "1.0.0",
  "description": "> 🛠️ Turn confusing Web3 errors into clear, human-friendly messages for developers and users alike.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "prebuild": "npm run clean",
    "prepublish": "pnpm run clean && pnpm run build",
    "version:patch": "pnpm version patch",
    "version:minor": "pnpm version minor",
    "version:major": "pnpm version major",
    "publish:local": "pnpm run prepublish && pnpm publish --access public",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:update-snapshots": "UPDATE_SNAPSHOTS=true jest",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "check:version": "ts-node scripts/check-version.ts",
    "sync:version": "ts-node scripts/version-sync.ts",
    "validate:branch": "ts-node scripts/validate-branch-name.ts",
    "prepare": "husky"
  },
  "keywords": [
    "web3",
    "ethereum",
    "blockchain",
    "error-handling",
    "typescript",
    "javascript",
    "ethers",
    "wagmi",
    "viem",
    "rpc-errors",
    "json-rpc",
    "smart-contracts",
    "solidity",
    "dapp",
    "developer-tools",
    "debug",
    "error-utils",
    "transaction",
    "metamask",
    "alchemy",
    "infura",
    "hardhat",
    "foundry"
  ],
  "author": "Renato Ferreira",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/RenatoRJF/web3-error-helper.git"
  },
  "homepage": "https://github.com/RenatoRJF/web3-error-helper#readme",
  "bugs": {
    "url": "https://github.com/RenatoRJF/web3-error-helper/issues"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.34.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.5.2",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
